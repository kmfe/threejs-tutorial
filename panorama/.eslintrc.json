{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "WebViewJavascriptBridge": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-console": "off"
  }
}
